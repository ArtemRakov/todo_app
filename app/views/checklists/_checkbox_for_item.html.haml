- if item.not_done?
  = simple_form_for [checklist, item], url: checklist_item_complete_path(checklist, item), method: :post do |f|
    = f.check_box :state, checked: item.done?
- else
  = simple_form_for [checklist, item], url: checklist_item_undo_path(checklist, item), method: :post do |f|
    = f.check_box :state, checked: item.done?
