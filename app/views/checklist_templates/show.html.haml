.container
  %h1= t('views.checklist_templates.show.title')
  %h2= @checklist_template.title
  %h3= t('views.checklist_templates.show.tags') + @checklist_template.show_tags
  %ul
    - @template_items.each do |template_item|
      %li
        = template_item.title
        = delete_template_link(@checklist_template, template_item)

  = render 'new_template_item_modal', checklist_template: @checklist_template,
    template_item: @template_item if policy(@template_item).new?

  %p
    = link_to t('views.checklist_templates.create.checklist'),
      checklist_template_checklist_copy_path(@checklist_template), method: :post


